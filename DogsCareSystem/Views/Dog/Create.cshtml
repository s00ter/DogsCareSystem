@using Microsoft.AspNetCore.Mvc.TagHelpers
@model DogsCareSystem.Models.Dto.CreateDogDto
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

 <div class="navbar-container">
    </div>
    <div class="main-container">
      <section class="space-sm">
        <div class="container">
          <div class="row mb-5">
            <!--end of col-->
          </div>
          <!--end of row-->
          <div class="row flex-md-row card card-md">
            <div class="card-body bg-secondary">
              <div class="text-center mb-5">
                <h1 class="h2 mb-2">Данные вашего питомца</h1>
              </div>
              <div class="row justify-content-center">
                <div class="col-6 col-lg-5">
                  <form method="post" asp-action="Create" enctype="multipart/form-data">
                    
                    <div class="form-row form-group">
                      <div class="col">
                        <input asp-for="Name" class="form-control form-control-lg" placeholder="Имя"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                      </div>

                      <div class="form-row form-group">
                        <div class="col">
                          <input asp-for="Age" class="form-control form-control-lg" placeholder="Возраст, лет"/>
                          <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                      </div>
                    </div>

                    <div class="form-row form-group">
                      <div class="col">
                        <input asp-for="Gender" class="form-control form-control-lg" placeholder="Пол"/>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                      </div>
                    </div>

                    <div class="form-row form-group">
                      <div class="col">
                        <input asp-for="Weight" class="form-control form-control-lg" placeholder="Вес, кг"/>
                        <span asp-validation-for="Weight" class="text-danger"></span>
                      </div>
                    </div>
                    
                    <div class="form-row form-group">
                      <div class="col">
                        <input type="checkbox" asp-for="IsLost" />Утерян<br />
                        <span asp-validation-for="IsLost" class="text-danger"></span>
                      </div>
                    </div>
                    
                    <div class="form-row form-group">
                      <div class="col">
                        <input asp-for="Image" type="file" class="form-control form-control-lg" placeholder="Image"/>
                        <span asp-validation-for="Image" class="text-danger"></span>
                      </div>
                    </div>

                    <div class="form-row form-group">
                      <select asp-for="BreedId" class="form-control">
                        @foreach (var item in ViewBag.Breeds)
                        {
                          <option value="@item.BreedId">@item.Name</option>
                        }
                      </select>
                      <span asp-validation-for="BreedId" class="text-danger"></span>
                    </div>
                    
                    @if (User.IsInRole("admin"))
                    {
                      <div class="form-row form-group">
                        <select asp-for="KennelId" class="form-control">
                          @foreach (var item in ViewBag.Kennels)
                          {
                            <option value="@item.KennelId">@item.Name</option>
                          }
                        </select>
                        <span asp-validation-for="KennelId" class="text-danger"></span>
                      </div>
                    }
                    <div class="form-row form-group">
                      <div class="col">
                        <button class="btn btn-block btn-success btn-lg" type="submit">Создать</button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!--end of container-->
      </section>
      <!--end of section-->
    </div>